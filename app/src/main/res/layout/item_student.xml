<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="120dp"
    android:background="@drawable/listitemselector"
    android:focusable="false"
    android:weightSum="1">

    <ImageView
        android:focusable="false"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imagePlus"
        android:src="@drawable/plus"
        android:layout_gravity="center_vertical" />

    <TextView
        android:focusable="false"
        android:layout_width="40dp"
        android:layout_height="37dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="70"
        android:id="@+id/textNumber"
        android:layout_marginLeft="0dp"
        android:textSize="30dp"
        android:textColor="#0b8409"
        android:textStyle="bold"
        android:layout_gravity="center_vertical" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:focusable="false"
        android:id="@+id/student_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#070386"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <LinearLayout
        android:focusable="false"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.97">

        <TextView
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Timon"
            android:id="@+id/textNick"
            android:textColor="#280303"
            android:layout_marginTop="30dp"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="top|left|bottom|center_vertical" />

        <TextView
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Artem Ivanov"
            android:id="@+id/textFullname"
            android:textColor="#927070"
            android:layout_marginTop="2dp"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="top|left|bottom|center_vertical" />
    </LinearLayout>

</LinearLayout>